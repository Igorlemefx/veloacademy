<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VeloNet - VeloAcademy | Plataforma de Treinamentos Corporativos</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/styles.css">
    
    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif'],
                    },
                    colors: {
                        'velo': {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900 font-inter text-white min-h-screen">
    
    <!-- Loading Screen -->
    <div id="loadingScreen" class="fixed inset-0 bg-gradient-to-br from-velo-900 to-slate-900 flex items-center justify-center z-50">
        <div class="text-center">
            <div class="w-24 h-24 border-4 border-velo-500 border-t-transparent rounded-full animate-spin mx-auto mb-6"></div>
            <h1 class="text-4xl font-bold text-velo-400 mb-2">VeloNet</h1>
            <p class="text-velo-300 text-lg">Carregando VeloAcademy...</p>
        </div>
    </div>

    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 bg-white/10 backdrop-blur-xl border-b border-white/20 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gradient-to-r from-velo-500 to-blue-600 rounded-xl flex items-center justify-center">
                        <i class="fas fa-network-wired text-white text-xl"></i>
                    </div>
                    <div>
                        <h1 class="text-xl font-bold text-white">VeloNet</h1>
                        <p class="text-xs text-velo-300">VeloAcademy</p>
                    </div>
                </div>

                <!-- Navigation -->
                <nav class="hidden md:flex items-center space-x-8">
                    <a href="#dashboard" class="nav-link active">Dashboard</a>
                    <a href="#cursos" class="nav-link">Cursos</a>
                    <a href="#certificados" class="nav-link">Certificados</a>
                    <a href="#relatorios" class="nav-link">Relatórios</a>
                    <a href="#perfil" class="nav-link">Perfil</a>
                </nav>

                <!-- User Menu -->
                <div class="flex items-center space-x-4">
                    <!-- Notifications -->
                    <button id="notificationsBtn" class="relative p-2 text-velo-300 hover:text-white transition-colors">
                        <i class="fas fa-bell text-xl"></i>
                        <span class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full"></span>
                    </button>

                    <!-- User Avatar -->
                    <div class="relative">
                        <button id="userMenuBtn" class="flex items-center space-x-2 text-white hover:text-velo-300 transition-colors">
                            <div class="w-8 h-8 bg-gradient-to-r from-velo-500 to-blue-600 rounded-full flex items-center justify-center">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <span class="hidden sm:block">João Silva</span>
                            <i class="fas fa-chevron-down text-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="pt-20 pb-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <!-- Dashboard Section -->
            <section id="dashboard" class="mb-12">
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-white mb-2">Bem-vindo ao VeloAcademy!</h2>
                    <p class="text-velo-300 text-lg">Continue seu desenvolvimento profissional</p>
                </div>

                <!-- Stats Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                    <div class="stat-card">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-velo-300 text-sm">Cursos Concluídos</p>
                                <p class="text-3xl font-bold text-white">12</p>
                            </div>
                            <div class="w-12 h-12 bg-gradient-to-r from-green-500 to-emerald-600 rounded-xl flex items-center justify-center">
                                <i class="fas fa-graduation-cap text-white text-xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-velo-300 text-sm">Horas de Estudo</p>
                                <p class="text-3xl font-bold text-white">48</p>
                            </div>
                            <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-velo-600 rounded-xl flex items-center justify-center">
                                <i class="fas fa-clock text-white text-xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-velo-300 text-sm">Certificados</p>
                                <p class="text-3xl font-bold text-white">8</p>
                            </div>
                            <div class="w-12 h-12 bg-gradient-to-r from-purple-500 to-pink-600 rounded-xl flex items-center justify-center">
                                <i class="fas fa-certificate text-white text-xl"></i>
                            </div>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-velo-300 text-sm">Pontos</p>
                                <p class="text-3xl font-bold text-white">2,450</p>
                            </div>
                            <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-600 rounded-xl flex items-center justify-center">
                                <i class="fas fa-star text-white text-xl"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Progress Overview -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                    <!-- Current Course -->
                    <div class="lg:col-span-2">
                        <div class="glass-card">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-xl font-semibold text-white">Curso em Andamento</h3>
                                <span class="px-3 py-1 bg-velo-600 text-white text-sm rounded-full">75%</span>
                            </div>
                            <div class="mb-4">
                                <h4 class="text-lg font-medium text-white mb-2">Gestão de Frotas Avançada</h4>
                                <p class="text-velo-300 text-sm mb-3">Aprenda técnicas avançadas para gestão eficiente de frotas de veículos</p>
                                <div class="w-full bg-slate-700 rounded-full h-3">
                                    <div class="bg-gradient-to-r from-velo-500 to-blue-500 h-3 rounded-full transition-all duration-500" style="width: 75%"></div>
                                </div>
                            </div>
                            <button class="w-full bg-gradient-to-r from-velo-600 to-blue-600 hover:from-velo-700 hover:to-blue-700 text-white py-3 rounded-xl transition-all duration-300 font-medium">
                                Continuar Curso
                            </button>
                        </div>
                    </div>

                    <!-- Recent Achievements -->
                    <div class="glass-card">
                        <h3 class="text-xl font-semibold text-white mb-4">Conquistas Recentes</h3>
                        <div class="space-y-3">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-full flex items-center justify-center">
                                    <i class="fas fa-trophy text-white"></i>
                                </div>
                                <div>
                                    <p class="text-white text-sm font-medium">Primeiro Curso</p>
                                    <p class="text-velo-300 text-xs">Concluído há 2 dias</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-emerald-600 rounded-full flex items-center justify-center">
                                    <i class="fas fa-fire text-white"></i>
                                </div>
                                <div>
                                    <p class="text-white text-sm font-medium">Estudante Dedicado</p>
                                    <p class="text-velo-300 text-xs">5 dias seguidos</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Courses Section -->
            <section id="cursos" class="mb-12">
                <div class="flex items-center justify-between mb-8">
                    <div>
                        <h2 class="text-3xl font-bold text-white mb-2">Cursos Disponíveis</h2>
                        <p class="text-velo-300 text-lg">Escolha sua próxima jornada de aprendizado</p>
                    </div>
                    <div class="flex space-x-3">
                        <button id="filterAll" class="filter-btn active">Todos</button>
                        <button id="filterSeguranca" class="filter-btn">Segurança</button>
                        <button id="filterGestao" class="filter-btn">Gestão</button>
                        <button id="filterAtendimento" class="filter-btn">Atendimento</button>
                    </div>
                </div>

                <!-- Courses Grid -->
                <div id="coursesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Courses will be loaded here -->
                </div>
            </section>

            <!-- Certificates Section -->
            <section id="certificados" class="mb-12">
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-white mb-2">Certificados</h2>
                    <p class="text-velo-300 text-lg">Suas conquistas profissionais</p>
                </div>

                <div id="certificatesGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Certificates will be loaded here -->
                </div>
            </section>

            <!-- Reports Section -->
            <section id="relatorios" class="mb-12">
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-white mb-2">Relatórios</h2>
                    <p class="text-velo-300 text-lg">Acompanhe seu progresso detalhado</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <!-- Progress Chart -->
                    <div class="glass-card">
                        <h3 class="text-xl font-semibold text-white mb-4">Progresso Mensal</h3>
                        <div id="progressChart" class="h-64 flex items-center justify-center">
                            <p class="text-velo-300">Gráfico de progresso será carregado aqui</p>
                        </div>
                    </div>

                    <!-- Skills Radar -->
                    <div class="glass-card">
                        <h3 class="text-xl font-semibold text-white mb-4">Habilidades</h3>
                        <div id="skillsRadar" class="h-64 flex items-center justify-center">
                            <p class="text-velo-300">Radar de habilidades será carregado aqui</p>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Profile Section -->
            <section id="perfil" class="mb-12">
                <div class="mb-8">
                    <h2 class="text-3xl font-bold text-white mb-2">Perfil</h2>
                    <p class="text-velo-300 text-lg">Gerencie suas informações pessoais</p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                    <!-- Profile Info -->
                    <div class="lg:col-span-2">
                        <div class="glass-card">
                            <h3 class="text-xl font-semibold text-white mb-4">Informações Pessoais</h3>
                            <form class="space-y-4">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-velo-300 text-sm font-medium mb-2">Nome</label>
                                        <input type="text" value="João Silva" class="form-input">
                                    </div>
                                    <div>
                                        <label class="block text-velo-300 text-sm font-medium mb-2">Email</label>
                                        <input type="email" value="joao.silva@empresa.com" class="form-input">
                                    </div>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-velo-300 text-sm font-medium mb-2">Cargo</label>
                                        <input type="text" value="Motorista" class="form-input">
                                    </div>
                                    <div>
                                        <label class="block text-velo-300 text-sm font-medium mb-2">Departamento</label>
                                        <input type="text" value="Logística" class="form-input">
                                    </div>
                                </div>
                                <button type="submit" class="bg-gradient-to-r from-velo-600 to-blue-600 hover:from-velo-700 hover:to-blue-700 text-white px-6 py-3 rounded-xl transition-all duration-300 font-medium">
                                    Salvar Alterações
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Profile Stats -->
                    <div class="glass-card">
                        <h3 class="text-xl font-semibold text-white mb-4">Estatísticas</h3>
                        <div class="space-y-4">
                            <div class="text-center">
                                <div class="w-20 h-20 bg-gradient-to-r from-velo-500 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-3">
                                    <i class="fas fa-user-graduate text-white text-2xl"></i>
                                </div>
                                <p class="text-2xl font-bold text-white">Nível 8</p>
                                <p class="text-velo-300 text-sm">Especialista</p>
                            </div>
                            <div class="border-t border-white/20 pt-4">
                                <div class="flex justify-between items-center mb-2">
                                    <span class="text-velo-300 text-sm">Próximo nível</span>
                                    <span class="text-white text-sm">2,450 / 3,000</span>
                                </div>
                                <div class="w-full bg-slate-700 rounded-full h-2">
                                    <div class="bg-gradient-to-r from-velo-500 to-blue-500 h-2 rounded-full" style="width: 82%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Notifications Panel -->
    <div id="notificationsPanel" class="fixed top-20 right-4 w-80 bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl shadow-2xl z-50 hidden">
        <div class="p-4 border-b border-white/20">
            <h3 class="text-lg font-semibold text-white">Notificações</h3>
        </div>
        <div class="p-4 space-y-3 max-h-96 overflow-y-auto">
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-gradient-to-r from-green-500 to-emerald-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-check text-white text-sm"></i>
                </div>
                <div>
                    <p class="text-white text-sm font-medium">Curso Concluído!</p>
                    <p class="text-velo-300 text-xs">Você completou "Segurança no Transporte"</p>
                    <p class="text-velo-400 text-xs">Há 2 horas</p>
                </div>
            </div>
            <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-velo-600 rounded-full flex items-center justify-center flex-shrink-0">
                    <i class="fas fa-star text-white text-sm"></i>
                </div>
                <div>
                    <p class="text-white text-sm font-medium">Nova Conquista!</p>
                    <p class="text-velo-300 text-xs">Desbloqueou "Estudante Dedicado"</p>
                    <p class="text-velo-400 text-xs">Há 1 dia</p>
                </div>
            </div>
        </div>
    </div>

    <!-- User Menu Dropdown -->
    <div id="userMenuDropdown" class="fixed top-20 right-4 w-48 bg-white/10 backdrop-blur-xl border border-white/20 rounded-xl shadow-2xl z-50 hidden">
        <div class="p-2">
            <a href="#" class="flex items-center space-x-3 px-3 py-2 text-white hover:bg-white/10 rounded-lg transition-colors">
                <i class="fas fa-user text-velo-300"></i>
                <span>Meu Perfil</span>
            </a>
            <a href="#" class="flex items-center space-x-3 px-3 py-2 text-white hover:bg-white/10 rounded-lg transition-colors">
                <i class="fas fa-cog text-velo-300"></i>
                <span>Configurações</span>
            </a>
            <a href="#" class="flex items-center space-x-3 px-3 py-2 text-white hover:bg-white/10 rounded-lg transition-colors">
                <i class="fas fa-question-circle text-velo-300"></i>
                <span>Ajuda</span>
            </a>
            <hr class="border-white/20 my-2">
            <a href="#" class="flex items-center space-x-3 px-3 py-2 text-red-400 hover:bg-red-500/10 rounded-lg transition-colors">
                <i class="fas fa-sign-out-alt"></i>
                <span>Sair</span>
            </a>
        </div>
    </div>

    <!-- Course Modal -->
    <div id="courseModal" class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 hidden">
        <div class="bg-white/10 backdrop-blur-xl border border-white/20 rounded-2xl max-w-4xl w-full mx-4 max-h-[90vh] overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h3 id="modalCourseTitle" class="text-2xl font-bold text-white mb-2">Título do Curso</h3>
                        <p id="modalCourseDescription" class="text-velo-300">Descrição do curso</p>
                    </div>
                    <button id="closeCourseModal" class="text-velo-300 hover:text-white transition-colors">
                        <i class="fas fa-times text-2xl"></i>
                    </button>
                </div>
                <div id="modalCourseContent" class="space-y-6">
                    <!-- Course content will be loaded here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="js/velonet.js"></script>
    <script src="js/veloacademy.js"></script>
    <script src="js/app.js"></script>
</body>
</html>
